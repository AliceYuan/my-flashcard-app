<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCardActivity">


    <ImageView
        android:id="@+id/cancelBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        android:src="@drawable/cancel_icon" />

    <ImageView
        android:id="@+id/saveBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="20dp"
        android:src="@drawable/save_icon" />

    <EditText
        android:id="@+id/questionTextField"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:hint="Enter The Question Here"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/answerTextField"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@id/questionTextField"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:hint="Enter The Answer Here"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/answerTextField2"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@id/answerTextField"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:hint="Enter Wrong Answer Option Here"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/answerTextField3"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@id/answerTextField2"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:hint="Enter Another Wrong Answer Option Here"
        android:inputType="textMultiLine" />

</RelativeLayout>